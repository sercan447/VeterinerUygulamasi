<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.KayitolActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="5dp"
        app:cardElevation="41dp"
        app:cardCornerRadius="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="#d35400"
                android:textSize="20dp"
                android:gravity="top|center"
                android:text="YERGÖK VETERINER HEKİMLİĞİ"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:background="#568723"
                android:layout_marginTop="10dp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="3dp">

                <EditText
                    android:id="@+id/ed_mailadres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mail adresi giriniz."/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="3dp">

            <EditText
                android:id="@+id/ed_kadi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kullanıcı Adı giriniz."/>

        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="3dp">

            <EditText
                android:id="@+id/ed_parola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Parola giriniz."/>

        </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/tv_hesapvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hesabım var.."
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#d35400"/>


            <android.support.design.button.MaterialButton
                android:id="@+id/btn_kayitol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kayıt Ol"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </LinearLayout>




    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>